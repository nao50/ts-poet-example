  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2015",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "compileOnSave": false
}